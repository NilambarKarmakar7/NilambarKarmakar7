#include <stdio.h>
void display (int arr[], int n){
    for (int i=0; i<n; i++){
        printf("%d ",arr[i]);
    }
    printf("\n");
}

int ind_insert(int arr[],int element, int ind, int total_size, int used_size) {
    if (used_size>=total_size){
        return -1;
    }
    for (int i=used_size-1; i>=ind; i--){
        arr[i+1] = arr[i];
    }
    arr[ind] = element;
    return 1;
}
int main() {
    int arr[100] = {7, 8, 12, 27, 88};
    int size=5;
    display(arr, size);
    int element=43, ind=2, total_size=100, used_size=5;
    ind_insert(arr, element, ind, total_size, used_size);
    size +=1;
    display(arr, size);
    return 0;
}