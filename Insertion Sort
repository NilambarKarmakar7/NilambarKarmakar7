#include <stdio.h>
void ins_sort(int arr[], int n){
    for (int i =0; i<=n-1; i++){
        int j = i;
        while (j>0 && arr[j-1]>arr[j]){
            int temp = arr[j];
            arr[j]=arr[j-1];
            arr[j-1]=temp;
            j--;
        }
    }
}
int main() {
    int arr[4]={2,8,18,1};
    ins_sort(arr,4);
    for(int i =0; i<4; i++){
        printf("%d ",arr[i]);
    }
    return 0;
}