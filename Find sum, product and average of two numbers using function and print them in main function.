// find sum, product and average of two numbers using function and print them in main function.
#include <stdio.h>
void arithmetic(int a, int b ,int *sum, int*prod, int*avg);

void arithmetic(int a , int b,int *sum,int *prod,int *avg) {
    *sum = a+b;
    *prod = a*b;
    *avg = (a+b)/2;
}

int main() {
    int x = 6;
    int y = 2;
    int sum, prod, avg;
    arithmetic(x, y, &sum, &prod, &avg);
    printf("sum = %d , product = %d and average = %d", sum, prod, avg);
    return 0;
}