// Online C compiler to run C program online
#include <stdio.h>
void bubble_sort(int arr[], int n){
    for (int i=0; i<=n-2; i++){
        for (int j = 0; j<n-i-1; j++){
            if (arr[j]>arr[j+1]){
                int temp = arr[j+1];
                arr[j+1] = arr[j];
                arr[j] = temp;
            }
        }
    }
}

int main() {
    int arr[4]={29,8,18,1};
    bubble_sort(arr,4);
    for (int i =0; i<4; i++){
        printf("%d ",arr[i]);
    }

    return 0;
}