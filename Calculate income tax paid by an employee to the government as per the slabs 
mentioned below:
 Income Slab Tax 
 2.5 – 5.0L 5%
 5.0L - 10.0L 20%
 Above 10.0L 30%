#include <stdio.h>

int main() {
    int income;
    printf("Enter your Income: ");
    scanf("%d", &income);
    if (income<250000) {
        printf("No tax");
    }
    else if (income>=250000 && income<500000) {
        printf("your income tax will be %d", income*5/100);
    }
    else if (income>=500000 && income<1000000) {
        printf("your income tax will be %d",income*10/100);
    }
    else{
        printf("your income tax will be %d", income*30/100);
    }

    return 0;
}