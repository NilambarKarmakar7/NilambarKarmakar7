#include <stdio.h>
#include <stdlib.h>
struct array {
    int used_size;
    int total_size;
    int *ptr;
};
void createArray(struct array* a, int t_size, int u_size) {
    a->total_size = t_size;
    a->used_size = u_size;
    a->ptr = (int*)malloc(t_size*sizeof(int));
}
void setVal(struct array* a){
    int n;
    for (int i=0; i< a->used_size;i++){
    printf("Enter number into the array : ");
    scanf("%d", &n);
    (a->ptr)[i]= n;
    }
}
void show(struct array* a){
    for(int i=0; i< a->used_size; i++){
        printf("%d\n", (a->ptr)[i]);
    }
}
int main() {
    struct array marks;
    createArray(&marks,10,3);
    printf("We are running setVal now\n");
    setVal(&marks);
    printf("We are running show now\n");
    show(&marks);
    return 0;
}